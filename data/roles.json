{
    "roles": [
        {
            "name": "admin",
            "description": "Administrator with full access to all resources.",
            "permissions": [
                "view_dashboard",
                "manage_users",
                "edit_content",
                "delete_content",
                "view_reports"
            ]
        },
        {
            "name": "editor",
            "description": "Editor with permissions to create and edit content.",
            "permissions": [
                "view_dashboard",
                "edit_content",
                "create_content",
                "view_reports"
            ]
        },
        {
            "name": "viewer",
            "description": "User with read-only access.",
            "permissions": [
                "view_dashboard",
                "view_reports"
            ]
        },
        {
            "name": "guest",
            "description": "Unregistered user with limited access.",
            "permissions": [
                "view_public_content"
            ]
        }
    ]
}